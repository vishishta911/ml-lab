df=pd.read_csv(r"E:\visss\3-2\extra_ml\ada.csv")
from sklearn.preprocessing import LabelEncoder
le=LabelEncoder()
df['Color']=le.fit_transform(df['Color'])
df['Type']=le.fit_transform(df['Type'])
df['Origin']=le.fit_transform(df['Origin'])
df['Stolen?']=le.fit_transform(df['Stolen?'])
y=df['Stolen?']
y
x=df.drop(['Stolen?'],axis=1)
from sklearn.ensemble import AdaBoostClassifier
#create model
ada_boost=AdaBoostClassifier()
#model training
ada_boost.fit(x,y)
y_pred=ada_boost.predict(x)
c=int(input('enter color'))
t=int(input('enter type'))
o=int(input('enter origin'))
new_sample=np.array([[c,t,o]])
class_lab=ada_boost.predict(new_sample)
if class_lab[0]==0:
    print('No')
else:
    print('Yes')
